{
    "version": "0.2.0",
    "configurations": [
        {
            "args": [],
            "cwd": "${workspaceRoot}",
            "env": {
                "NODE_ENV": "development"
            },
            "name": "DEBUG",
            "outFiles": ["${workspaceRoot}/dist/**/*.js"],
            "preLaunchTask": "compile",
            "program": "${workspaceRoot}/src/index.ts",
            "request": "launch",
            "runtimeArgs": [
                "--nolazy"
            ],
            "runtimeExecutable": null,
            "outputCapture": "std",
            "sourceMaps": true,
            "stopOnEntry": false,
            "type": "node"
        },
        {
            "args": [],
            "cwd": "${workspaceRoot}",
            "env": {
                "NODE_ENV": "development"
            },
            "name": "TEST",
            "outFiles": ["${workspaceRoot}/dist/**/*.js"],
            "preLaunchTask": "compile",
            "program": "${workspaceRoot}/src/test.ts",
            "request": "launch",
            "runtimeArgs": [
                "--nolazy"
            ],
            "runtimeExecutable": null,
            "outputCapture": "std",
            "sourceMaps": true,
            "stopOnEntry": false,
            "type": "node"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha All",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-r",
                "ts-node/register",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/test/**/*-spec.ts",
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "protocol": "inspector"
        },
    ]
}